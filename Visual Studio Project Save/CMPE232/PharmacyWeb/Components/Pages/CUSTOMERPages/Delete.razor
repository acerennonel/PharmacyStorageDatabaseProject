@page "/customers/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CUSTOMER</h2>
    <hr />
    @if (customer is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@customer.CName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Birth Date</dt>
            <dd class="col-sm-10">@customer.Birth_date</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@customer.Gender</dd>
        </dl>
        <EditForm method="post" Model="customer" OnValidSubmit="DeleteCUSTOMER" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(customer is null)">Delete</button> |
            <a href="/customers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CUSTOMER? customer;

    [SupplyParameterFromQuery]
    private string SSN { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        customer = await context.CUSTOMER.FirstOrDefaultAsync(m => m.SSN == SSN);

        if (customer is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeleteCUSTOMER()
    {
        using var context = DbFactory.CreateDbContext();
        await context.BUYS_MEDICINE_FROM.Where(b => b.C_SSN == SSN).ExecuteDeleteAsync();
        await context.PRESCRIPTION.Where(p => p.C_SSN == SSN).ExecuteDeleteAsync();
        await context.CUSTOMER.Where(c => c.SSN == SSN).ExecuteDeleteAsync();
        NavigationManager.NavigateTo("/customers");
    }
}
