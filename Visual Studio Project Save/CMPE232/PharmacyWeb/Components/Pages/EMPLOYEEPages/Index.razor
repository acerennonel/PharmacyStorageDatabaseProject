@page "/employees"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using DataAccess
@using PharmacyWeb.Data
@implements IAsyncDisposable
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Employee</h1>

<p>
    <a href="employees/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.EMPLOYEE.AsQueryable()">
    <PropertyColumn Property="employee => employee.EName" Title="Name" Sortable="true" />
    <PropertyColumn Property="employee => employee.ID" Sortable="true" />
    <PropertyColumn Property="@(employee => employee.Gender.Equals("F") ? "Female" : (employee.Gender.Equals("M") ? "Male" : "N/A"))" Title="Gender" Sortable="true" />
    <PropertyColumn Property="employee => employee.Phone_number" Title="Phone Number" Sortable="true" />
    <PropertyColumn Property="employee => employee.MC_ID" Title="Medicine Company ID" Sortable="true" />
    <PropertyColumn Property="employee => employee.Leader_ID" Title="Leader ID" Sortable="true" />

    <TemplateColumn Context="employee">
        <a href="@($"employees/edit?id={employee.ID}")">Edit</a> |
        <a href="@($"employees/details?id={employee.ID}")">Details</a> |
        <a href="@($"employees/delete?id={employee.ID}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private PharmacyWebContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
