@page "/gets_medicine_froms"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using DataAccess
@using PharmacyWeb.Data
@implements IAsyncDisposable
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Gets Medicine Log</h1>

<p>
    <a href="gets_medicine_froms/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.GETS_MEDICINE_FROM.AsQueryable()">
    <PropertyColumn Property="gets_medicine_from => gets_medicine_from.MC_ID" Title="Medicine Company ID" Sortable="true" />
    <PropertyColumn Property="gets_medicine_from => gets_medicine_from.Pharmacy_ID" Title="Pharmacy ID" Sortable="true" />
    <PropertyColumn Property="gets_medicine_from => gets_medicine_from.Medicine_ID" Title="Medicine ID" Sortable="true" />
    <PropertyColumn Property="gets_medicine_from => gets_medicine_from.Buy_amount" Title="Buy Amount" Sortable="true" />
    <PropertyColumn Property="gets_medicine_from => gets_medicine_from.Transaction_date" Title="Transaction Date" Sortable="true" />

    <TemplateColumn Context="gets_medicine_from">
        <a href="@($"gets_medicine_froms/edit?id={gets_medicine_from.ID}")">Edit</a> |
        <a href="@($"gets_medicine_froms/details?id={gets_medicine_from.ID}")">Details</a> |
        <a href="@($"gets_medicine_froms/delete?id={gets_medicine_from.ID}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private PharmacyWebContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
