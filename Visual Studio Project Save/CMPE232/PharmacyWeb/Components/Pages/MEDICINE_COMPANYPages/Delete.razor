@page "/medicine_companies/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MEDICINE_COMPANY</h2>
    <hr />
    @if (medicine_company is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@medicine_company.MCName</dd>
        </dl>
        <EditForm method="post" Model="medicine_company" OnValidSubmit="DeleteMEDICINE_COMPANY" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(medicine_company is null)">Delete</button> |
            <a href="/medicine_companies">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MEDICINE_COMPANY? medicine_company;

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        medicine_company = await context.MEDICINE_COMPANY.FirstOrDefaultAsync(m => m.ID == ID);

        if (medicine_company is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeleteMEDICINE_COMPANY()
    {
        using var context = DbFactory.CreateDbContext();
        await context.GETS_MEDICINE_FROM.Where(m => m.MC_ID == ID).ExecuteDeleteAsync();
        var medicines = context.MEDICINE.Where(m => m.MC_ID == ID).ToList();

        foreach (MEDICINE m in medicines)
        {
            await context.BUYS_MEDICINE_FROM.Where(b => b.Medicine_ID == m.ID).ExecuteDeleteAsync();
            await context.GETS_MEDICINE_FROM.Where(g => g.Medicine_ID == m.ID).ExecuteDeleteAsync();
            var prescriptions = context.PRESCRIPTION.Where(p => p.Mecidine_ID == m.ID).ToList();

            foreach (var prescription in prescriptions)
            {
                prescription.Mecidine_ID = null;
            }

            await context.SaveChangesAsync();
            await context.MEDICINE.Where(p => p.ID == m.ID).ExecuteDeleteAsync();
        }

        var employees = context.EMPLOYEE.Where(m => m.MC_ID == ID).ToList();

        foreach (EMPLOYEE e in employees)
        {
            var employeesThatHasLeader = context.EMPLOYEE.Where(ethl => ethl.Leader_ID == e.ID).ToList();

            foreach (var employee in employeesThatHasLeader)
            {
                employee.Leader_ID = null;
            }

            await context.SaveChangesAsync();
            await context.EMPLOYEE.Where(m => m.MC_ID == ID).ExecuteDeleteAsync();
        }

        await context.MEDICINE_COMPANY_LOCATIONS.Where(m => m.MC_ID == ID).ExecuteDeleteAsync();
        await context.MEDICINE_COMPANY.Where(m => m.ID == ID).ExecuteDeleteAsync();
        NavigationManager.NavigateTo("/medicine_companies");
    }
}
