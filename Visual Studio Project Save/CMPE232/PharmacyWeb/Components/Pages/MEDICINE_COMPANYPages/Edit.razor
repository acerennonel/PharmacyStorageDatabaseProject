@page "/medicine_companies/edit"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>MEDICINE_COMPANY</h2>
<hr />
@if (MEDICINE_COMPANY is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="MEDICINE_COMPANY" OnValidSubmit="UpdateMEDICINE_COMPANY" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="MEDICINE_COMPANY.ID" value="@MEDICINE_COMPANY.ID" />
                <div class="mb-3">
                    <label for="mcname" class="form-label">Name:</label>
                    <InputText id="mcname" @bind-Value="MEDICINE_COMPANY.MCName" class="form-control" />
                    <ValidationMessage For="() => MEDICINE_COMPANY.MCName" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/medicine_companies">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int ID { get; set; }

    [SupplyParameterFromForm]
    private MEDICINE_COMPANY? MEDICINE_COMPANY { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        MEDICINE_COMPANY ??= await context.MEDICINE_COMPANY.FirstOrDefaultAsync(m => m.ID == ID);

        if (MEDICINE_COMPANY is null)
        {
            NavigationManager.NotFound();
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateMEDICINE_COMPANY()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(MEDICINE_COMPANY!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!MEDICINE_COMPANYExists(MEDICINE_COMPANY!.ID))
            {
                NavigationManager.NotFound();
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/medicine_companies");
    }

    private bool MEDICINE_COMPANYExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.MEDICINE_COMPANY.Any(e => e.ID == id);
    }
}
