@page "/pharmacists/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PHARMACIST</h2>
    <hr />
    @if (pharmacist is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@pharmacist.PName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Birth Date</dt>
            <dd class="col-sm-10">@pharmacist.Birth_date</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@pharmacist.Gender</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Salary</dt>
            <dd class="col-sm-10">@pharmacist.Salary</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Pharmacy ID</dt>
            <dd class="col-sm-10">@pharmacist.Pharmacy_ID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Leader SSN</dt>
            <dd class="col-sm-10">@pharmacist.Leader_SSN</dd>
        </dl>
        <EditForm method="post" Model="pharmacist" OnValidSubmit="DeletePHARMACIST" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(pharmacist is null)">Delete</button> |
            <a href="/pharmacists">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PHARMACIST? pharmacist;

    [SupplyParameterFromQuery]
    private string SSN { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        pharmacist = await context.PHARMACIST.FirstOrDefaultAsync(m => m.SSN == SSN);

        if (pharmacist is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeletePHARMACIST()
    {
        using var context = DbFactory.CreateDbContext();
        var pharmacists = context.PHARMACIST.Where(p => p.Leader_SSN == SSN).ToList();

        foreach (var pharmacist in pharmacists)
        {
            pharmacist.Leader_SSN = null;
        }

        await context.SaveChangesAsync();
        await context.PHARMACIST.Where(p => p.SSN == SSN).ExecuteDeleteAsync();
        NavigationManager.NavigateTo("/pharmacists");
    }
}
