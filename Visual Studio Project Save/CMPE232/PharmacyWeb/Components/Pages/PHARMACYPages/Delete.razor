@page "/pharmacies/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PHARMACY</h2>
    <hr />
    @if (pharmacy is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@pharmacy.PName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@pharmacy.PLocation</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@pharmacy.Phone_number</dd>
        </dl>
        <EditForm method="post" Model="pharmacy" OnValidSubmit="DeletePHARMACY" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(pharmacy is null)">Delete</button> |
            <a href="/pharmacies">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PHARMACY? pharmacy;

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        pharmacy = await context.PHARMACY.FirstOrDefaultAsync(m => m.ID == ID);

        if (pharmacy is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeletePHARMACY()
    {
        using var context = DbFactory.CreateDbContext();
        await context.BUYS_MEDICINE_FROM.Where(p => p.Pharmacy_ID == ID).ExecuteDeleteAsync();
        await context.GETS_MEDICINE_FROM.Where(p => p.Pharmacy_ID == ID).ExecuteDeleteAsync();
        var medicines = context.MEDICINE.Where(m => m.Pharmacy_ID == ID).ToList();

        foreach (var medicine in medicines)
        {
            medicine.Pharmacy_ID = null;
        }

        await context.SaveChangesAsync();

        var pharmacists = context.PHARMACIST.Where(p => p.Pharmacy_ID == ID).ToList();

        foreach (PHARMACIST p in pharmacists)
        {
            var pharmacistsThatHasLeader = context.PHARMACIST.Where(pthl => pthl.Leader_SSN == p.SSN).ToList();

            foreach (var pharmacist in pharmacistsThatHasLeader)
            {
                pharmacist.Leader_SSN = null;
            }

            await context.SaveChangesAsync();
            await context.PHARMACIST.Where(p => p.Pharmacy_ID == ID).ExecuteDeleteAsync();
        }

        await context.PHARMACY.Where(p => p.ID == ID).ExecuteDeleteAsync();
        NavigationManager.NavigateTo("/pharmacies");
    }
}
