@page "/prescriptions/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PRESCRIPTION</h2>
    <hr />
    @if (prescription is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Hospital Name</dt>
            <dd class="col-sm-10">@prescription.Hospital_name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Doctor Name</dt>
            <dd class="col-sm-10">@prescription.Doctor_name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Customer SSN</dt>
            <dd class="col-sm-10">@prescription.C_SSN</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Mecidine ID</dt>
            <dd class="col-sm-10">@prescription.Mecidine_ID</dd>
        </dl>
        <EditForm method="post" Model="prescription" OnValidSubmit="DeletePRESCRIPTION" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(prescription is null)">Delete</button> |
            <a href="/prescriptions">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PRESCRIPTION? prescription;

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        prescription = await context.PRESCRIPTION.FirstOrDefaultAsync(m => m.ID == ID);

        if (prescription is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeletePRESCRIPTION()
    {
        using var context = DbFactory.CreateDbContext();
        await context.PRESCRIPTION.Where(p => p.ID == ID).ExecuteDeleteAsync();
        NavigationManager.NavigateTo("/prescriptions");
    }
}
