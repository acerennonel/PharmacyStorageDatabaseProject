@page "/prescriptions/edit"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<PharmacyWeb.Data.PharmacyWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>PRESCRIPTION</h2>
<hr />
@if (PRESCRIPTION is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="PRESCRIPTION" OnValidSubmit="UpdatePRESCRIPTION" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="PRESCRIPTION.ID" value="@PRESCRIPTION.ID" />
                <div class="mb-3">
                    <label for="hospital_name" class="form-label">Hospital Name:</label>
                    <InputText id="hospital_name" @bind-Value="PRESCRIPTION.Hospital_name" class="form-control" />
                    <ValidationMessage For="() => PRESCRIPTION.Hospital_name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="doctor_name" class="form-label">Doctor Name:</label>
                    <InputText id="doctor_name" @bind-Value="PRESCRIPTION.Doctor_name" class="form-control" />
                    <ValidationMessage For="() => PRESCRIPTION.Doctor_name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="c_ssn" class="form-label">Customer SSN:</label>
                    <InputText id="c_ssn" @bind-Value="PRESCRIPTION.C_SSN" class="form-control" />
                    <ValidationMessage For="() => PRESCRIPTION.C_SSN" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="mecidine_id" class="form-label">Mecidine ID:</label>
                    <InputNumber id="mecidine_id" @bind-Value="PRESCRIPTION.Mecidine_ID" class="form-control" />
                    <ValidationMessage For="() => PRESCRIPTION.Mecidine_ID" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/prescriptions">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int ID { get; set; }

    [SupplyParameterFromForm]
    private PRESCRIPTION? PRESCRIPTION { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        PRESCRIPTION ??= await context.PRESCRIPTION.FirstOrDefaultAsync(m => m.ID == ID);

        if (PRESCRIPTION is null)
        {
            NavigationManager.NotFound();
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdatePRESCRIPTION()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(PRESCRIPTION!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PRESCRIPTIONExists(PRESCRIPTION!.ID))
            {
                NavigationManager.NotFound();
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/prescriptions");
    }

    private bool PRESCRIPTIONExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.PRESCRIPTION.Any(e => e.ID == id);
    }
}
